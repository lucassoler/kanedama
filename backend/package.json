{
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "start": "NODE_ENV=local npm run build && NODE_ENV=local node ./dist/configuration/startup",
    "build:watch": "tsc --build -w ./tsconfig.json",
    "start:node": "nodemon ./dist/index.js",
    "test:integration": "NODE_ENV=test jest --watchAll --testPathPattern=\".*/integration/.*.test.ts\"",
    "test:watch": "NODE_ENV=test jest --watchAll --testPathPattern=\".*/usecases/.*.test.ts\""
  },
  "jest": {
    "globalSetup": "<rootDir>/src/configuration/tests/jest.setup.js",
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDit</dist"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.1",
    "fastify": "3.29.0",
    "helmet": "^5.1.0",
    "http-errors": "^2.0.0",
    "knex": "2.1.0",
    "nodemon": "2.0.16",
    "pg": "^8.7.3",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  }
}
